#!/usr/bin/perl
use strict;
use warnings;

sub main(@){
  my @errors = `ls /media/*_ 2>/dev/null`;
  if(@errors > 0){
    system "sudo umount -f -l /media/*_ 2>/dev/null";
    system "sudo rmdir /media/* 2>/dev/null";
    system "sudo mnt";
  }
  system "sudo rmdir /media/* 2>/dev/null";
}

&main(@ARGV);
