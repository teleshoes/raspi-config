#!/usr/bin/perl
use strict;
use warnings;

my $IPMAGIC_NAME = "raspi";
my $gitRepo = "https://github.com/teleshoes/net.git";

sub run(@){
  print "@_\n";
  system @_;
}

my $host = `ipmagic $IPMAGIC_NAME --host`;
chomp $host;

run "ipmagic", $IPMAGIC_NAME, "-u", "root", "-b", "
  if [ -e /opt/net ]; then
    echo updating net git repo
    cd /opt/net
    git pull
  else
    echo fetching net git repo
    cd /opt
    git clone $gitRepo
  fi
  echo running net install
  cd /opt/net
  ./install.pl
";
