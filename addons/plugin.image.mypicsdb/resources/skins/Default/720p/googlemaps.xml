<window>
    <defaultcontrol>101</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <animation effect="fade" time="250">WindowOpen</animation>
    <animation effect="fade" time="250">WindowClose</animation>
    <controls>
        <control type="group">
            <posx>290</posx>
            <posy>50</posy>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>700</width>
                <height>600</height>
                <texture border="40">default-panel.png</texture>
            </control>
            <control type="image" id="200">
                <posx>100</posx>
                <posy>10</posy>
                <width>500</width>
                <height>500</height>
            </control>
            <control type="label" id="100">
                <description>Google Maps Label</description>
                <posx>0</posx>
                <posy>25</posy>
                <width>700</width>
                <height>40</height>
                <font>font18</font>
                <textcolor>white</textcolor>
                <aligny>center</aligny>
                <align>center</align>
                <wrapmultiline>true</wrapmultiline>
            </control>

            <control type="button" id="101">
                <description>Close</description>
                <posx>30</posx>
                <posy>520</posy>
                <width>200</width>
                <height>40</height>
                <font>font18</font>
                <textcolor>white</textcolor>
                <aligny>center</aligny>
                <align>center</align>
                <onleft>103</onleft>
                <onright>102</onright>
            </control>
            <control type="button" id="102">
                <description>Zoom In</description>
                <posx>252</posx>
                <posy>520</posy>
                <width>200</width>
                <height>40</height>
                <font>font18</font>
                <textcolor>white</textcolor>
                <aligny>center</aligny>
                <align>center</align>
                <onleft>101</onleft>
                <onright>103</onright>
            </control>
            <control type="button" id="103">
                <description>Zoom Out</description>
                <posx>480</posx>
                <posy>520</posy>
                <width>200</width>
                <height>40</height>
                <font>font18</font>
                <textcolor>white</textcolor>
                <aligny>center</aligny>
                <align>center</align>
                <onleft>102</onleft>
                <onright>101</onright>
            </control>  


        </control>
    </controls>
</window>
